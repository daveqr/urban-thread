{
  "name": "apparel-ecomm-backend",
  "version": "1.0.0",
  "main": "index.ts",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=development nodemon src/index.ts",
    "debug": "NODE_ENV=development node --inspect -r ts-node/register src/index.ts",
    "test": "jest --config jest.config.js --testPathIgnorePatterns=\"<rootDir>/tests/integration\"",
    "test:all": "jest --config jest.config.js",
    "test:integration": "NODE_ENV=test jest --config jest.config.js tests/integration/**/*.ts",
    "test:db": "NODE_ENV=test jest --config jest.config.js tests/integration/infrastructure/data/**/*.ts",
    "test:watch": "jest --watch",
    "cypress": "cypress run",
    "typeorm": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli --config src/data-source.ts",
    "seed": "npx ts-node -r tsconfig-paths/register db-scripts/seeds/seeders/main.seeder.ts",
    "typeorm:generate-migration": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli migration:generate db-scripts/migrations/ApparelMigration -d ./src/data-source.ts",
    "typeorm:create-migration": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli migration:create db-scripts/migrations/ApparelMigration",
    "typeorm:run-migrations": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli migration:run -- -d ./src/data-source.ts",
    "typeorm:revert-migration": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli migration:revert -- -d ./src/data-source.ts"
  },
  "dependencies": {
    "-": "^0.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.2",
    "@types/nodemailer": "^6.4.15",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/uuid": "^9.0.8",
    "accept-language-parser": "^1.5.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "express-validator": "^7.1.0",
    "helmet": "^7.1.0",
    "i18n-2": "^0.7.3",
    "immutable": "^4.3.6",
    "joi": "^17.13.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.13",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.2",
    "slugify": "^1.6.6",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.20",
    "typescript": "^5.4.5",
    "winston": "^3.13.0"
  },
  "packageManager": "yarn@4.2.2",
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/jest": "^29.5.12",
    "@types/sinon": "^17.0.3",
    "cypress": "^13.11.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.3",
    "sinon": "^18.0.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  }
}
